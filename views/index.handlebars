<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="assets/img/burger_alt.png" alt="burger" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-md-6" class="task">
			<div class="row list-row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-8">
					<ul>
					<div class="list">{{this.burger_name}}</div>
					</ul>
				  	
				</div>
				<div class="col-md-auto">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text" placeholder="Enter a burger you want to eat!">
				<button type="submit" class="btn btn-primary" id="text-enter-button" style="margin-top: 20px">Submit</button>
			</form>
		</div>
	</div>
</div>
